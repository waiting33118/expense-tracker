<div class="container mt-5">
  <div class="card bg-light shadow mx-auto" style="max-width: 400px;">
    <div class="card-body d-flex flex-column align-items-center">
      <h1 class="text-success">Register
        <hr>
      </h1>
      {{> errorMessages}}
      <form action="/users/register" method="post">
        <small class="form-text text-muted mb-1"><span class="text-danger">*</span>為必填</small>
        <div class="form-group">
          <label for="userName">姓名<span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="name" id="userName" placeholder="請輸入姓名..." value="{{name}}">
        </div>
        <div class="form-group">
          <label for="userAccount">帳號<span class="text-danger">*</span></label>
          <input type="email" class="form-control" name="email" id="userAccount" placeholder="請輸入帳號..."
            value="{{email}}">
        </div>
        <div class="form-group">
          <label for="userPassword">密碼<span class="text-danger">*</span></label>
          <input type="password" class="form-control" name="password" id="userPassword" placeholder="請輸入密碼...">
        </div>
        <div class="form-group">
          <label for="userConfirmPassword">確認密碼<span class="text-danger">*</span></label>
          <input type="password" class="form-control" name="confirmPassword" id="userConfirmPassword"
            placeholder="請輸入密碼...">
        </div>
        <small class="form-text text-muted">已有帳號?<a href="/users/login">Login/登入</a></small>
        <button type="submit" id="loginButton"
          class="btn btn-outline-success btn-block rounded-pill mt-4">Register/註冊帳號</button>
      </form>
    </div>
  </div>
</div>