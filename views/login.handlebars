<div class="container mt-5">
  <div class="card bg-light shadow mx-auto" style="max-width: 400px;">
    <div class="card-body d-flex flex-column align-items-center">
      <h1 class="text-success">Login
        <hr>
      </h1>
      {{> errorMessages}}
      <form action="/users/login" method="post" class="my-2 py-2">
        <div class="form-group">
          <label for="userAccount">帳號</label>
          <input type="email" class="form-control" name="email" id="userAccount" placeholder="請輸入帳號...">
        </div>
        <div class="form-group">
          <label for="userPassword">密碼</label>
          <input type="password" class="form-control" name="password" id="userPassword" placeholder="請輸入密碼...">
        </div>
        <small class="form-text text-muted">尚未註冊?<a href="/users/register">Register/註冊</a></small>
        <button type="submit" id="loginButton"
          class="btn btn-outline-success btn-block rounded-pill mt-4">Login/登入</button>
      </form>
    </div>
  </div>
</div>